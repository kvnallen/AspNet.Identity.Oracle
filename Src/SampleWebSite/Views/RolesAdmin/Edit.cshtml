@model IdentitySample.Models.RoleViewModel

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm("Edit", "RolesAdmin", FormMethod.Post, htmlAttributes: new { @class = "formulario-empilhado" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Edição de Regras</legend>

        @Html.ValidationSummary(true)

        <div class="formulario-grupo">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="formulario-grupo">
            <label for="Name">Descrição</label>
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 7, cols = 35 })
            @Html.ValidationMessageFor(model => model.Description)
        </div>


    </fieldset>
    <input type="submit" value="Criar nova regra" class="botao-sucesso" />
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
