@model IdentitySample.Models.RoleViewModel

@{
    ViewBag.Title = "Create";
}

<h1><small>Criação de Regras</small></h1>


@using (Html.BeginForm("Create", "RolesAdmin", FormMethod.Post, htmlAttributes: new { @class = "formulario-empilhado" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        
        @Html.ValidationSummary(true)

        <div class="formulario-grupo">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="formulario-grupo">
            <label for="Name">Descrição</label>
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 7, cols= 35 })
            @Html.ValidationMessageFor(model => model.Description)
        </div>


    </fieldset>
    <input type="submit" value="Criar nova regra" class="botao-sucesso" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
